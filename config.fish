# Default text-editor and terminal
set EDITOR "vim"
set TERM "alacritty"

# Aliases
alias cp="cp -i"                                            
alias mv="mv -i"
alias rm="rm -i"
alias ls="ls --color=auto"

alias df="df -h"                                    # Human-readable sizes
alias free="free -m"                                # Show sizes in MB
alias gitu="git add . && git commit && git push"    # Git commands

